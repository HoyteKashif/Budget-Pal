<?xml version="1.0" encoding="UTF-8"?>
<web-app
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  version="2.5"
>
	<display-name><![CDATA[FirstWicketApplication]]></display-name>
	
	<context-param>
		<param-name>configuration</param-name>
		<param-value>development</param-value>
	</context-param>
	<filter>
		<filter-name><![CDATA[WicketFilter]]></filter-name>
		<filter-class><![CDATA[org.apache.wicket.protocol.http.WicketFilter]]></filter-class>
		<init-param>
			<param-name><![CDATA[applicationClassName]]></param-name>
			<param-value><![CDATA[com.TechTheEasyWay.page.WicketApplication]]></param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name><![CDATA[WicketFilter]]></filter-name>
		<url-pattern><![CDATA[/*]]></url-pattern>
	</filter-mapping>
</web-app>	